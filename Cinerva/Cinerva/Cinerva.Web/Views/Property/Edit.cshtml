@model Cinerva.Web.Models.PropertyEditViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>PropertyViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rating" class="control-label"></label>
                <input asp-for="Rating" class="form-control" />
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TotalRooms" class="control-label"></label>
                <input asp-for="TotalRooms" class="form-control" />
                <span asp-validation-for="TotalRooms" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberOfDaysForRefunds" class="control-label"></label>
                <input asp-for="NumberOfDaysForRefunds" class="form-control" />
                <span asp-validation-for="NumberOfDaysForRefunds" class="text-danger"></span>
            </div>

          <div class="form-group">
                @Html.LabelFor(x => Model.ListOfCities, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-5">
                @Html.DropDownListFor(x => Model.CityId,Model.ListOfCities, htmlAttributes: new { @class = "form-control", id = "city"})
                @Html.ValidationMessageFor(x => x.CityId, "", new { @class = "text-danger" })
                 </div>
            </div>

             <div class="form-group">
                @Html.LabelFor(x => Model.ListOfAdministrators, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-5">
                @Html.DropDownListFor(x => Model.AdministratorId,Model.ListOfAdministrators, htmlAttributes: new { @class = "form-control", id = "admin"})
                @Html.ValidationMessageFor(x => x.AdministratorId, "", new { @class = "text-danger" })
                 </div>
            </div>

             <div class="form-group">
                @Html.LabelFor(x => Model.ListOfPropertyTypes, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-5">
                @Html.DropDownListFor(x => Model.PropetyTypeId, Model.ListOfPropertyTypes, htmlAttributes: new { @class = "form-control", id = "propertyType"})
                @Html.ValidationMessageFor(x => x.PropetyTypeId, "", new { @class = "text-danger" })
                 </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
